<script >
    const GIPHY_API = 'd7wj94m6tsUKl4TDzcOmLwiqxiMqogqg'
    let url = "http://api.giphy.com/v1/gifs/random?tag=meme&api_key="+GIPHY_API;
    fetch(url)
            .then(response => response.json())
            .then(data => successHandler(data))
            .catch(error => errorHandler(error))

    function successHandler(data) {
        console.log(data);
        placeMeme(data)
    }

    function errorHandler(error) {
        console.log('dit gaat mis ', error);
    }

    function placeMeme(data) {
        let img = document.getElementById('lolMeme')
        img.src = data.data.image_url
    }
</script>
